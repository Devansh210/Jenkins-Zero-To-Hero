pipeline {
  agent any

  environment {
    SONAR_URL = "http://192.168.10.135:9000"
    APP_DIR = "java-maven-sonar-argocd-helm-k8s/spring-boot-app"
  }

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/Devansh210/Jenkins-Zero-To-Hero.git'
      }
    }

    stage('Maven Build') {
      steps {
        dir("$APP_DIR") {
          sh 'mvn clean install'
        }
      }
    }

    stage('SonarQube Scan') {
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          dir("$APP_DIR") {
            sh '''
              mvn sonar:sonar \
                -Dsonar.projectKey=spring-boot-app \
                -Dsonar.projectName=spring-boot-app \
                -Dsonar.login=$SONAR_AUTH_TOKEN \
                -Dsonar.host.url=$SONAR_URL
            '''
          }
        }
      }
    }

  stage('Credential Scan - TruffleHog') {
  steps {
    sh '''
      mkdir -p reports

      echo "üîç Running TruffleHog..."
      trufflehog --json --entropy=True . > reports/trufflehog-report.json 2>&1 || true

      echo "üìÑ TruffleHog Report Preview (first 20 lines):"
      head -n 20 reports/trufflehog-report.json || echo "‚ö†Ô∏è Could not preview report"

      if grep -q '"DetectorName"' reports/trufflehog-report.json; then
        echo "‚ö†Ô∏è WARNING: Potential secrets were detected by TruffleHog!"
        echo "üìù Full report saved to: reports/trufflehog-report.json"
      else
        echo "‚úÖ No secrets detected."
      fi
    '''
  }
}





    }

  post {
    success {
      echo "‚úÖ Pipeline completed successfully."
    }
    failure {
      echo "‚ùå Pipeline failed. Please check logs."
    }
    always {
      archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
      archiveArtifacts artifacts: 'reports/trufflehog-report.json', allowEmptyArchive: true
    }
  }
}
